          color: #0056b3;
        }
        h1 {
            color: #007bff;
        }
        .endpoint {
            margin-bottom: 20px;
        }
        .endpoint h2 {
            margin: 0;
            padding: 0;
            color: #0056b3;
        }
        .endpoint p {
            margin: 5px 0;
        }
        .request, .response {
            background-color: #f8f9fa;
            border: 1px solid #e9ecef;
            border-radius: 4px;
            padding: 10px;
            margin: 5px 0;
            overflow-x: auto;
        }
        .code {
            font-family: monospace;
            white-space: pre-wrap;
